# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=my_surf
pkgver=2.0
pkgrel=1
pkgdesc="Simple Web Browser"
arch=('x86_64' 'i386')
url="https://gitlab.com/aftix/surf"
license=('MIT')
depends=('libx11' 'glib2' 'gtk3' 'gcr' 'webkit2gtk')
provides=('surf')
makedepends=('git')
source=()
sha256sums=()

prepare() {
  git clone "$url"
  mv "surf" "$pkgname-$pkgver"
	cd "$pkgname-$pkgver"
  git checkout my_surf
}

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make PREFIX=/usr MANPREFIX=/usr/share/man DESTDIR="$pkgdir/" install
  mkdir -p "$HOME/.surf"
  cp plugins/* "$HOME/.surf/."
}
