# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=st
pkgver=0.8.1
pkgrel=1
pkgdesc="The Simple (Suckless) Terminal"
arch=('x86_64' 'i386')
url="https://st.suckless.org/"
license=('MIT')
depends=('libx11')
provides=('st')
source=("https://dl.suckless.org/st/$pkgname-$pkgver.tar.gz"
        "https://st.suckless.org/patches/alpha/$pkgname-alpha-20180616-$pkgver.diff"
        "$pkgname-$pkgver-myconfig.diff")
sha256sums=('c4fb0fe2b8d2d3bd5e72763e80a8ae05b7d44dbac8f8e3bb18ef0161c7266926'
            'SKIP' 'SKIP')

prepare() {
	cd "$pkgname-$pkgver"
	patch <"$srcdir/$pkgname-alpha-20180616-$pkgver.diff"
	patch <"$srcdir/$pkgname-$pkgver-myconfig.diff"
}

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make PREFIX=/usr MANPREFIX=/usr/share/man DESTDIR="$pkgdir/" install
}
