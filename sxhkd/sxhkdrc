# Dvorak Layout

#
# wm independent hotkeys
#

# terminal emulator
super + alt + Return
  st

# Emoji
super + alt + shift + Return
  dmenuunicode

# program launcher
super + @space
  dmenu_run

# Conky
super + @F2
  conky

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# Randomize wallpaper
super + shift + b
  feh --randomize --bg-scale ~/.wallpaper/*

# Clear messages
super + apostrophe
  polybar-msg hook ipc 1

# Help
super + F1
  groff -mms -Tpdf $HOME/.config/sxhkd/help.ms | zathura -

# Pulseaudio volume controls
super + v ; {u, d}
  volume.sh {+,-}3

super + v ; shift + {u, d}
  volume.sh {+,-}10

super + v ; {e, t, m}
  volume.sh {a, t, m}

super + v ; shift + m
  volume.sh u

# Swap clipboard buffers
super + x
  xsel -o -p | xsel -i -s ; xsel -o -b | xsel -i -p ; xsel -o -s | xsel -i -b

# Screenshot hotkeys
super + a ; {_, shift +} s
  screenshot.sh {none, ask}

super + a ; {f, z}
  screenshot.sh none {focused, full}

super + a ; shift + {f, z}
  screenshot.sh ask {focused, full}

# Screencast hotkeys
super + r ; {_, shift +} r
  screencast.sh {ask, }

super + r ; {_, shift +, alt + } w
  screencast.sh {ask, default} w

super + r ; k
  screencast.sh __kill

super + r ; alt + r
  screencast.sh ask s default ask

super + r ; alt + w
  screencast.sh ask w default ask

# Convience scripts
super + z
  play.sh

super + minus
  calculator.sh

super + shift + z
  open.sh

# DWM Layouts (here for sequencing)
super + e ; {t, n, m, b, h, s, d}
  xsetroot -name "fsignal:"{1,,3,4,5,6,7}
