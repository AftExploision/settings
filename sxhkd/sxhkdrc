#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvtc

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Randomize wallpaper
super + b
      feh --randomize --bg-scale ~/.wallpaper/*

# Clear messages
super + q
      polybar-msg hook ipc 1

# Pulseaudio volume controls
super + {v,shift + v}
      $HOME/.config/bspwm/volume.sh {+,-}3

super + ctrl + {v, shift + v}
      $HOME/.config/bspwm/volume.sh {+,-}10

super + alt + {v, shift + v}
      $HOME/.config/bspwm/volume.sh {a,t}

super + alt + ctrl + {v, shift + v}
      $HOME/.config/bspwm/volume.sh {m, u}

# Swap clipboard buffers
super + x
      xsel -o -p | xsel -i -s ; xsel -o -b | xsel -i -p ; xsel -o -s | xsel -i -b

# Screenshot hotkeys
super + {_,shift + }a
      $HOME/.config/bspwm/screenshot.sh {none,ask}

super + alt + {_,shift + }a
      $HOME/.config/bspwm/screenshot.sh {none,ask} focused

super + ctrl + {_,shift + }a
      $HOME/.config/bspwm/screenshot.sh {none,ask} full

# Screencast hotkeys
super + r
      $HOME/.config/bspwm/screencast.sh ask

super + alt + r
      $HOME/.config/bspwm/screencast.sh ask w

super + shift + r
      $HOME/.config/bspwm/screencast.sh

super + alt + shift + r
      $HOME/.config/bspwm/screencast.sh default w

super + ctrl + r
      $HOME/.config/bspwm/screencast.sh __kill

super + ctrl + alt + r
      $HOME/.config/bspwm/screencast.sh ask s default ask

super + ctrl + alt + shift + r
      $HOME/.config/bspwm/screencast.sh ask w default ask

# Convience scripts
super + semicolon
      $HOME/.config/bspwm/play.sh

super + apostrophe
      $HOME/.config/bspwm/calculator.sh

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	$HOME/.config/bspwm/quit.sh

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

super + shift + m
      bspc monitor -f next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Named Workspaces and monitors
super + minus
      $HOME/.config/bspwm/node_send.sh

super + alt + minus
      $HOME/.config/bspwm/node_send.sh --follow

super + ctrl + minus
      $HOME/.config/bspwm/node_monitor.sh

super + ctrl + alt + minus
      $HOME/.config/bspwm/node_monitor.sh --follow

super + equal
      $HOME/.config/bspwm/desktop.sh

super + alt + equal
      $HOME/.config/bspwm/desktop_remove.sh

super + ctrl + equal
      $HOME/.config/bspwm/desktop_rename.sh
