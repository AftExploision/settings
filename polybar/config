[global/wm]
margin-top = 35
margin-bottom = 0

[colors]
green = #32AD32
black = #ff121212
white = #ffffff
red = #ff0000
transparent = #00000000

[bar/Bar]
bottom = false
wm-restack = bspwm

line-size = 1

foreground = ${colors.green}
background = ${colors.black}

monitor = HDMI-0

fixed-center = true

border-size = 0

width = 100%
height = 30

override-redirect = false

enable-ipc = true

padding-left = 0
padding-right = 0

module-margin-right = 0
module-margin-left = 0

modules-center = date padding ipc
modules-left = cpu padding filesystem padding memory 
modules-right = bspwm padding pulse spacing

font-0 = DroidSansMono:size=10;0

tray-position = left
tray-maxsize = 16
tray-transparent = false

[bar/uBar]
inherit = bar/Bar
monitor = DVI-I-1
tray-position = right 

[module/spacing]
type = custom/text
content = _
content-padding = 1
content-foreground = ${colors.transparent}

[module/date]
type = internal/date
date-alt = %A    %H:%M
date = %a  %d %b %y %R
interval = 5p

[module/cpu]
type = internal/cpu
interval = 0.5
label = CPU %percentage%%

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enables-scroll = false
fuzzy-match = true

[module/padding]
type = custom/text
content = |
content-padding = 2

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home
interval = 10
fixed-values = true
label-mounted = %mountpoint%: %free%

[module/pulse]
type = internal/pulseaudio
sink = alsa_output.pci-0000_01_00.1.hdmi-stereo-extra1
interval = 5
label-muted-foreground = ${colors.red}
label-muted = 0%
format-volume = Volume: <label-volume>

[module/memory]
type = internal/memory
interval = 3
label = RAM: %percentage_free%%

[module/ipc]
type = custom/ipc
hook-1 = touch /tmp/polybar_ipc ; cat /tmp/polybar_ipc
hook-0 = echo "No new messages"
initial = 1